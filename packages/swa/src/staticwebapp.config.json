{
  "platform": {
    "apiRuntime": "node:18"
  },
  "routes": [
    {
      "route": "/admin*",
      "rewrite": "/admin.html",
      "allowedRoles": [
        "administrator"
      ]
    },
    {
      "route": "/api/settings*",
      "rewrite": "/api/settings",
      "allowedRoles": [
        "administrator"
      ]
    },
    {
      "route": "/login",
      "redirect": "/.auth/login/aad"
    },
    {
      "route": "/.auth/login/github",
      "statusCode": 404
    }
  ]
}