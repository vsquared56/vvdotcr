{
  "platform": {
    "apiRuntime": "node:18"
  },
  "routes": [
    {
      "route": "/admin",
      "rewrite": "/admin.html",
      "allowedRoles": [
        "administrator"
      ]
    },
    {
      "route": "/admin.html",
      "allowedRoles": [
        "administrator"
      ]
    },
    {
      "route": "/admin-sightings.html",
      "allowedRoles": [
        "administrator"
      ]
    },
    {
      "route": "/api/settings*",
      "methods": ["GET", "PUT", "POST", "DELETE"],
      "allowedRoles": [
        "administrator"
      ]
    },
    {
      "route": "/api/panel*",
      "methods": ["GET", "PUT", "POST", "DELETE"],
      "allowedRoles": [
        "administrator"
      ]
    },
    {
      "route": "/login",
      "redirect": "/.auth/login/aad"
    },
    {
      "route": "/.auth/login/github",
      "statusCode": 404
    }
  ],
  "globalHeaders": {
    "accept-ch": "sec-ch-ua-platform,sec-ch-ua-platform-version"
  }
}