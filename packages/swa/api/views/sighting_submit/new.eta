<dialog id="sighting-submit"
        class="modal bg-transparent-black-700"
        hx-on::load="renderModal(event);"
        <% if (it.retrySubmission) { %>
        hx-swap-oob="true"
        <% } %>
        >
  <div id="sighting-submit-status"
       class="modal-box flex flex-col justify-normal w-11/12 md:w-10/12 lg:w-7/12 xl:w-6/12 h-min p-0 overflow-hidden border-2 border-accent bg-base-100">
      <script>
        function renderModal(event) {
          if (event.target.id==='sighting-submit') {
            turnstile.render(
              '#turnstile-sighting',
              {
                sitekey: '<%= it.turnstileSiteKey %>',
                theme: 'dark',
                callback: turnstileCallback,
              }
            );
            htmx.find('#sighting-submit').showModal();
          }
        }

        function turnstileCallback(token) {
          var button = document.getElementById('sighting-send-button');
          button.disabled = false;
          button.innerHTML = "Send!";
        }
      </script>
    <div class="navbar bg-base-100 min-h-8">
      <div class="navbar-start"></div>
      <div class="navbar-center">Submit a new sighting</div>
      <div class="navbar-end">
        <button class="btn btn-sm btn-circle btn-ghost"
          hx-on:click="htmx.find('#sighting-submit').close();htmx.find('#sighting-submit').outerHTML='';">âœ•</button>
      </div>
    </div>
    <form id="form"
          hx-encoding="multipart/form-data"
          hx-post="/api/sightings"
          hx-target="#sighting-submit-status"
          hx-swap="outerHTML">
      <div class="grid grid-cols-1 gap-4 md:gap-6 xl:gap-8 justify-center justify-items-center items-start px-1.5 py-4">
        <input name="file"
               type="file"
               accept="image/jpeg,image/png"
               class="file-input file-input-secondary w-[304px]">
        <div id="turnstile-sighting" class="w-[304px] h-[69px] rounded-btn overflow-clip border-2 border-secondary"></div>
        <div>
          <button class="btn btn-secondary"
                  id="sighting-send-button"
                  disabled="disabled">
            Upload
          </button>
          <progress id="progress" class="progress w-40 md:w-56" value="0" max="100"></progress>
        </div>
      </div>
    </form>
    <script>
      htmx.on('#form', 'htmx:xhr:progress', function (evt) {
        htmx.find('#progress').setAttribute('value', evt.detail.loaded / evt.detail.total * 100);
        if (evt.detail.loaded == evt.detail.total) {
          htmx.off('#form', 'htmx:xhr:progress', this);
        }
      });
    </script>
    <form method="dialog" class="modal-backdrop">
      <button hx-on:click="htmx.find('#sighting-submit').close();htmx.find('#sighting-submit').outerHTML='';">Close</button>
    </form>
  </div>
</dialog>