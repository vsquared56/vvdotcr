<div id="submission-error" hx-target="this" hx-swap="outerHTML">
  <input type="checkbox" id="submission-error-modal" class="modal-toggle" checked="true" />
  <div class="modal" role="dialog">
    <div class="modal-box">
      <h3 class="font-bold text-lg">Something went wrong!</h3>
      <p class="py-4">Your submission timed out.  {{submissionId}}</p>
      <p class="py-4">Current status: {{submissionStatus}}</p>
      <div class="modal-action">
        <label for="submission-error-modal" class="btn btn-primary" hx-get="/api/fileupload?retry=true">OK!</label>
      </div>
    </div>
  </div>
</div>