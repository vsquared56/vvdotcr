<dialog id="sighting-details" class="modal" hx-on::load="htmx.find('#sighting-details').showModal()">
  <div class="flex flex-col justify-normal modal-box max-w-screen-xl h-5/6 p-0 overflow-hidden bg-gray-600"
    hx-target="this" hx-swap="outerHTML">
    <div class="navbar bg-base-100 min-h-8">
      <div class="navbar-start">
        <details class="dropdown">
          <summary class="m-1 btn btn-square btn-ghost btn-sm">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
            class="inline-block w-5 h-5 stroke-current">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </summary>
          <ul class="p-2 shadow menu dropdown-content z-[1] bg-base-100 rounded-box w-52">
            <form>
              {{#if sighting.isPublished}}
              <li><button name="action" value="unpublish" hx-put="/api/panel/sightings/{{sighting.id}}">Unpublish sighting</button></li>
              {{else}}
              <li><button name="action" value="publish" hx-put="/api/panel/sightings/{{sighting.id}}">Publish sighting</button></li>
              {{/if}}
              <li><button value="delete" hx-delete="/api/panel/sightings/{{sighting.id}}">Delete sighting</button></li>
            </form>
          </ul>
        </details>
      </div>
      {{#if sighting.isPublished}}
      <div class="navbar-center badge badge-success">Published sighting</div>
      {{else}}
      <div class="navbar-center badge badge-warning">Unpublished sighting</div>
      {{/if}}
      <div class="navbar-end">
        <button class="btn btn-sm btn-circle btn-ghost"
          hx-on:click="htmx.find('#sighting-details').close();htmx.find('#sighting-details').outerHTML='';">âœ•</button>
      </div>
    </div>
    <div class="flex-1"></div>
    <div class="flex flex-col overflow-y-auto">
      <div class="flex-none text-center">{{sighting.id}}</div>
      <img class="max-w-screen h-auto rounded-md object-scale-down drop-shadow-md" src="{{sighting.largeImageUrl}}" alt="" />
      <div class="flex-none text-center">{{sightingDate}}</div>
      <table id="sightings-table" class="table table-fixed">
        <thead>
          <tr>
            <th class="w-1/4">Property Name</th>
            <th class="w-3/4">Value</th>
          </tr>
        </thead>
        <tbody>
          {{{sightingProperties}}}
        </tbody>
      </table>
    </div>
    <div class="flex-1"></div>
    <div class="navbar bg-base-100 min-h-8">
      <div class="navbar-start">
      </div>
      <div class="navbar-center">This is a sighting!</div>
      <div class="navbar-end">
        <details class="dropdown dropdown-top dropdown-end">
          <summary class="btn btn-square btn-ghost btn-sm">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
            class="inline-block w-5 h-5 stroke-current">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z">
              </path>
            </svg>
          </summary>
          <ul class="p-2 shadow menu dropdown-content z-[1] bg-base-100 rounded-box w-52">
            <li><a href="{{sighting.largeImageUrl}}" target="_blank">View full image</a></li>
            <li><a>Another action</a></li>
          </ul>
        </details>
      </div>
    </div>
  </div>
</dialog>