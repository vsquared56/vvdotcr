{{#if loadMore}}
<div class="card w-96 bg-base-100 shadow-xl"
     hx-get="/api/sightings?page={{nextPage}}"
     hx-trigger="revealed"
     hx-swap="afterend">
{{else}}
<div class="card w-96 bg-base-100 shadow-xl">
{{/if}}
  <div class="sighting-description">{{sightingId}}</div>
  <img class="sighting-img" src="{{sightingImage}}" />
</div>