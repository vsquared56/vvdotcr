<dialog id="submission-status" class="modal" hx-on::load="htmx.find('#submission-status').showModal()">
  <div class="modal-box" hx-target="this" hx-swap="outerHTML">
    <h3 class="font-bold text-lg">Submission error!</h3>
    <p class="py-4">{{error}}</p>
    <div class="modal-action">
      <label for="submission-status-modal" class="btn btn-primary" hx-get="/api/fileupload?finished=true">OK!</label>
    </div>
  </div>
</dialog>