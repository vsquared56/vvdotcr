<style>
    table {
        table-layout: fixed;
        width: 70%;
        border: 1px solid red;
    }

    td {
        border: 1px solid blue;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    }
</style>
<table id="settings_table">
    <thead>
        <tr>
            <th>Setting Name</th>
            <th>Value</th>
            <th></th>
        </tr>
    </thead>
    <tbody hx-target="closest tr" hx-swap="outerHTML">
        {{{settingsItems}}}
        <tr>
            <td colspan = 3>
                <button class="btn btn-danger" hx-get="/api/settings/new" >
                Add Setting
                </button>
            </td>
        </tr>
    </tbody>
</table>