<div id="sighting-submit" class="collapse bg-base-200">
    <input type="checkbox" checked="true" />
    <div class="collapse-title text-xl font-medium">
        Settings
    </div>
    <div class="collapse-content">
        <table id="panel-settings-table" class="table table-fixed">
            <thead>
                <tr>
                    <th class="w-1/4">Setting Name</th>
                    <th class="w-1/2">Value</th>
                    <th class="w-1/4"></th>
                </tr>
            </thead>
            <tbody hx-target="closest tr" hx-swap="outerHTML">
                {{{settingsItems}}}
                <tr>
                    <td colspan=3>
                        <button class="btn btn-danger" hx-get="/api/settings/new">
                            Add Setting
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>