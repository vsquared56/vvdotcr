<div id="submission-status">
  <input type="checkbox" id="submission-status-modal" class="modal-toggle" checked="true" />
  <div class="modal" role="dialog">
    <div class="modal-box"
         hx-get="/api/submission-status?submissionId={{submissionId}}&recheckCount={{recheckCount}}"
         hx-trigger="every {{recheckInterval}}s"
         hx-swap="outerHTML">
      <h3 class="font-bold text-lg">Processing! {{submissionId}}</h3>
      <p class="py-4">Image saved... rechecking status every {{recheckInterval}} seconds...</p>
      {{#if pendingResizing}}
      <p class="py-4">Current status: pending resizing.</p>
      {{else if pendingAutomaticApproval}}
      <p class="py-4">Current status: pending automatic approval.</p>
      {{/if}}
    </div>
  </div>
</div>