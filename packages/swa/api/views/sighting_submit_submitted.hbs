<dialog id="submission-status" class="modal" hx-on::load="htmx.find('#submission-status').showModal()">
  <div class="modal-box" hx-get="/api/sightings/{{sightingId}}/status?recheckCount={{recheckCount}}"
    hx-trigger="every {{recheckInterval}}s" hx-swap="outerHTML">
    <h3 class="font-bold text-lg">Processing! {{sightingId}}</h3>
    <span class="loading loading-spinner loading-lg"></span>
    <p class="py-4">Image saved... rechecking status every {{recheckInterval}} seconds...</p>
    <p class="py-4">Current status: just saved.</p>
  </div>
</dialog>