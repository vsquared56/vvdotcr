{{#if loadMore}}
<div class="card card-compact w-full min-w-60 max-w-80 bg-base-300 shadow-xl"
     hx-get="/api/sightings?page={{nextPage}}"
     hx-trigger="revealed"
     hx-swap="afterend">
{{else}}
<div class="card card-compact w-full min-w-60 max-w-80 bg-base-300 shadow-xl">
{{/if}}
  <figure hx-get="/api/sightings/{{sightingId}}"
          hx-trigger="click" 
          hx-target="body"
          hx-swap="beforeend">
    <img class="sighting-img" src="{{sightingImage}}" />
  </figure>
  <div class="card-body items-center text-center"
       hx-get="/api/sightings/{{sightingId}}"
       hx-trigger="click" 
       hx-target="body"
       hx-swap="beforeend">
    <div class="badge badge-neutral">{{sightingDate}}</div>
  </div>
</div>