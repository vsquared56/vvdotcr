<% if (it.loadMore) { %>
<div class="card card-compact w-full min-w-60 max-w-80 bg-base-300 shadow-xl"
     hx-get="/api/sightings?page=<%= it.nextPage %>"
     hx-trigger="revealed"
     hx-swap="afterend">
<% } else { %>
<div class="card card-compact w-full min-w-60 max-w-80 bg-base-300 shadow-xl">
<% } %>
  <figure hx-get="/api/sightings/<%= it.sightingId %>"
          hx-trigger="click" 
          hx-target="body"
          hx-swap="beforeend">
    <img class="sighting-img" src="<%= it.sightingImage %>" />
  </figure>
  <div class="card-body items-center text-center"
       hx-get="/api/sightings/<%= it.sightingId %>"
       hx-trigger="click" 
       hx-target="body"
       hx-swap="beforeend">
    <div class="badge badge-neutral"><%= it.sightingDate %></div>
  </div>
</div>