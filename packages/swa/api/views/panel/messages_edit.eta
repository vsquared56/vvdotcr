<dialog id="message-details" class="modal" hx-on::load="htmx.find('#message-details').showModal()">
  <div class="flex flex-col justify-normal modal-box max-w-screen-xl h-5/6 p-0 overflow-hidden bg-gray-600"
    hx-target="this" hx-swap="outerHTML">
    <div class="navbar bg-base-100 min-h-8">
      <div class="navbar-start">
        <details id="message-modal-menu" class="dropdown">
          <summary class="m-1 btn btn-square btn-ghost btn-sm">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
            class="inline-block w-5 h-5 stroke-current">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </summary>
          <ul class="p-2 shadow menu dropdown-content z-[1] bg-base-100 rounded-box w-52">
            <form>
              <li><button hx-get="/api/panel/messages/<%= it.message.id %>/properties/edit" hx-target="#message-information" hx-on:click="htmx.find('#message-modal-menu').removeAttribute('open');">Edit properties</button></li>
              <li><button name="action" value="unpublish" hx-put="/api/panel/messages/<%= it.message.id %>" hx-target="#message-details">Unpublish message</button></li>
              <li><button name="action" value="publish" hx-put="/api/panel/messages/<%= it.message.id %>" hx-target="#message-details">Publish message</button></li>
              <li><button hx-delete="/api/panel/messages/<%= it.message.id %>" hx-target="#message-details" hx-confirm="Permanently delete this message?">Delete message</button></li>
            </form>
          </ul>
        </details>
      </div>
      <div class="navbar-center badge badge-success">Message</div>
      <div class="navbar-end">
        <button class="btn btn-sm btn-circle btn-ghost"
          hx-on:click="htmx.find('#message-details').close();htmx.find('#message-details').outerHTML='';">âœ•</button>
      </div>
    </div>
    <div class="flex-1"></div>
    <div class="flex flex-col overflow-y-auto">
      <div class="flex-none text-center"><%= it.message.id %></div>
      <div class="flex-none text-center"><%= it.messageDate %></div>
      <div id="message-information"></div>
    </div>
    <div class="flex-1"></div>
    <div class="navbar bg-base-100 min-h-8">
      <div class="navbar-start">
      </div>
      <div class="navbar-center">This is a message!</div>
      <div class="navbar-end">
        <details class="dropdown dropdown-top dropdown-end">
          <summary class="btn btn-square btn-ghost btn-sm">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
            class="inline-block w-5 h-5 stroke-current">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z">
              </path>
            </svg>
          </summary>
          <ul class="p-2 shadow menu dropdown-content z-[1] bg-base-100 rounded-box w-52">
            <li><a>Some action</a></li>
            <li><a>Another action</a></li>
          </ul>
        </details>
      </div>
    </div>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button hx-on:click="htmx.find('#message-details').close();htmx.find('#message-details').outerHTML='';">Close</button>
  </form>
</dialog>