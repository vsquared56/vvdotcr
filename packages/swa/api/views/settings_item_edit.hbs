<tr hx-trigger='cancel' class='editing' hx-get="/api/setting/?settingId={{settingId}}">
  <td class="text-xs lg:text-sm">{{settingName}}</td>
  <td class="text-xs lg:text-sm"><input name='value' value='{{{settingValue}}}'></td>
  <td>
    <button class="btn btn-warning btn-sm" hx-get="/api/settings/{{settingName}}">
      Cancel
    </button>
    <button class="btn btn-error btn-sm" hx-delete="/api/settings/{{settingName}}">
      Delete
    </button>
    <button class="btn btn-success btn-sm" hx-put="/api/settings/{{settingName}}" hx-include="closest tr">
      Save
    </button>
  </td>
</tr>