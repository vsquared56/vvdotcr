<tr hx-trigger='cancel' class='editing' hx-get="/api/setting/?settingId={{settingId}}">
  <td>{{settingName}}</td>
  <td><input name='value' value='{{{settingValue}}}'></td>
  <td>
    <button class="btn btn-warning" hx-get="/api/settings/{{settingName}}">
      Cancel
    </button>
    <button class="btn btn-error" hx-delete="/api/settings/{{settingName}}">
      Delete
    </button>
    <button class="btn btn-success" hx-put="/api/settings/{{settingName}}" hx-include="closest tr">
      Save
    </button>
  </td>
</tr>